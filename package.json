{
  "name": "gh-actions-panel",
  "version": "1.0.0",
  "description": "TUI for monitoring GitHub Actions workflows",
  "module": "src/index.tsx",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/martin-mael/actions-panel"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --compile --outfile dist/gh-actions-panel",
    "build:linux-x64": "bun build src/index.tsx --compile --target=bun-linux-x64 --outfile dist/gh-actions-panel-linux-x64",
    "build:linux-arm64": "bun build src/index.tsx --compile --target=bun-linux-arm64 --outfile dist/gh-actions-panel-linux-arm64",
    "build:darwin-x64": "bun build src/index.tsx --compile --target=bun-darwin-x64 --outfile dist/gh-actions-panel-darwin-x64",
    "build:darwin-arm64": "bun build src/index.tsx --compile --target=bun-darwin-arm64 --outfile dist/gh-actions-panel-darwin-arm64",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.10"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.75",
    "@opentui/react": "^0.1.75",
    "react": "^19.2.4"
  },
  "optionalDependencies": {
    "@opentui/core-darwin-arm64": "^0.1.75",
    "@opentui/core-darwin-x64": "^0.1.75",
    "@opentui/core-linux-arm64": "^0.1.75",
    "@opentui/core-linux-x64": "^0.1.75"
  }
}
